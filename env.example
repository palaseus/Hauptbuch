# Hauptbuch Environment Configuration
# Copy this file to .env and update the values as needed

# System Configuration
HAUPTBUCH_ENVIRONMENT=development
HAUPTBUCH_LOG_LEVEL=info
HAUPTBUCH_NETWORK_ID=1

# Database Configuration
DATABASE_URL=rocksdb://./data/hauptbuch.db
REDIS_URL=redis://localhost:6379

# Network Configuration
P2P_PORT=30303
RPC_PORT=8545
WS_PORT=8546
BOOTNODES=

# Security Configuration
PRIVATE_KEY=
QUANTUM_RESISTANT=true
HYBRID_CRYPTO=true

# Consensus Configuration
VALIDATOR_COUNT=100
STAKE_THRESHOLD=1000000
SLASHING_PERCENTAGE=0.05
BLOCK_TIME=12
EPOCH_LENGTH=100

# Performance Configuration
MAX_WORKERS=8
PARALLEL_EXECUTION=true
BLOCK_STM=true
OPTIMISTIC_VALIDATION=true

# Data Availability Configuration
DA_PROVIDER=celestia
CELESTIA_RPC_URL=https://rpc.celestia.org
CELESTIA_API_KEY=

# Layer 2 Configuration
ROLLUPS_ENABLED=true
ZKEVM_ENABLED=true
EIP4844_ENABLED=true

# Based Rollup Configuration
ESPRESSO_SEQUENCER_ENABLED=true
ESPRESSO_RPC_URL=https://rpc.espresso.org
HOTSTUFF_BFT_ENABLED=true
PRECONFIRMATIONS_ENABLED=true

# Cross-Chain Configuration
BRIDGE_ENABLED=true
IBC_ENABLED=true
CCIP_ENABLED=true

# Governance Configuration
PROPOSAL_THRESHOLD=0.01
VOTING_PERIOD=7
EXECUTION_DELAY=1
QUORUM_THRESHOLD=0.2

# MEV Protection Configuration
ENCRYPTED_MEMPOOL=true
BUILDER_SEPARATION=true
ANTI_FRONTRUNNING=true
MEV_DETECTION=true

# Sharding Configuration
SHARDING_ENABLED=true
SHARD_COUNT=4
CROSS_SHARD_COMMUNICATION=true

# TEE Configuration
INTEL_SGX_ENABLED=true
ARM_TRUSTZONE_ENABLED=false
AMD_SEV_ENABLED=false

# zkML Configuration
ZKML_ENABLED=true
EZKL_ENABLED=false
HALO2_ENABLED=true

# zkTLS Configuration
ZKTLS_ENABLED=true
CERTIFICATE_VALIDATION=true
HANDSHAKE_PROOFS=true

# Compliance Configuration
COMPLIANCE_ENABLED=true
JURISDICTIONS=US,EU,UK,JP
REPORTING_INTERVAL=24
ENFORCEMENT=true

# Oracle Configuration
PREDICTIVE_ORACLE_ENABLED=true
ML_MODELS_ENABLED=true
TIME_SERIES_ENABLED=true
RISK_ASSESSMENT_ENABLED=true

# Restaking Configuration
EIGENLAYER_ENABLED=true
LIQUID_RESTAKING=true
SECURITY_GUARANTEES=true
DECENTRALIZATION_PRESERVATION=true

# Monitoring Configuration
METRICS_ENABLED=true
ALERTING=true
HEALTH_CHECKS=true
PERFORMANCE_MONITORING=true

# API Configuration
RPC_ENABLED=true
REST_API=true
GRAPHQL=true
RATE_LIMITING=true
CORS_ENABLED=true

# Testing Configuration
UNIT_TESTS=true
INTEGRATION_TESTS=true
BENCHMARKS=true
FUZZING=true
CHAOS_ENGINEERING=true

# Development Configuration
HOT_RELOAD=true
DEBUG_MODE=true
PROFILING=true
TRACING=true
